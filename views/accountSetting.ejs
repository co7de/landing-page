                    <div class="card">
                        <form action="/social-media" method="post">
                            <div class="card-body">
                                <div class="mb-3">
                                    <label class="form-label"><%= translation.twitter %></label>
                                    <input type="text" class="form-control form-control-lg" name="twitter"
                                           value="<%= settingSocialMedia ? settingSocialMedia.socialMedia.twitter : '' %>"
                                           placeholder="<%= translation.twitter %>">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label"><%= translation.facebook %></label>
                                    <input type="text" class="form-control form-control-lg" name="facebook"
                                           value="<%= settingSocialMedia ? settingSocialMedia.socialMedia.facebook : '' %>"
                                           placeholder="<%= translation.facebook %>">
                                </div>
                                <div>
                                    <label class="form-label"><%= translation.linkedin %></label>
                                    <input type="text" class="form-control form-control-lg" name="linkedIn"
                                           value="<%= settingSocialMedia ? settingSocialMedia.socialMedia.linkedIn : '' %>"
                                           placeholder="<%= translation.linkedin %>">
                                </div>
                            </div>
                            <div class="card-footer text-end">
