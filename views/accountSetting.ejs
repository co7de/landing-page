                                                        Cardiology
                                                    </option>
                                                    <option value="Ophthalmology" <%= clinic && clinic.clinicType === 'Ophthalmology' ? 'selected' : '' %>>
                                                        Ophthalmology
                                                    </option>
                                                    <option value="Orthopedics" <%= clinic && clinic.clinicType === 'Orthopedics' ? 'selected' : '' %>>
                                                        Orthopedics
                                                    </option>
                                                    <option value="Psychiatry" <%= clinic && clinic.clinicType === 'Psychiatry' ? 'selected' : '' %>>
                                                        Psychiatry
                                                    </option>
                                                    <option value="Neurology" <%= clinic && clinic.clinicType === 'Neurology' ? 'selected' : '' %>>
                                                        Neurology
                                                    </option>
                                                    <option value="Dentistry" <%= clinic && clinic.clinicType === 'Dentistry' ? 'selected' : '' %>>
                                                        Dentistry
                                                    </option>
                                                    <option value="Endocrinology" <%= clinic && clinic.clinicType === 'Endocrinology' ? 'selected' : '' %>>
